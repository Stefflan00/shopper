<% @page_title = "#{params[:value]} - Products" %>
<div ="category">
  <h2>Products</h2>
  <p class="intro">
    Displaying products where <b>#{params[:key]}</b> is <b>#{params[:value]}</b>.
    <% if @products.empty? %>
    There are no products matching your filter
    <% else %>
      <%= render 'shared/product_list', :products => @products %>
    <% end %>
  </p>
</div>
