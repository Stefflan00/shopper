<% @page_title = 'Catalogue' %>
<div class="categories">
  <ul>
    <% @product_categories.each do |category|  %>
      <li>
        <div class="thumbnail">
          <% if category.image %>
            <%= image_tag(category.image.path) %>
            <br>
            <h4>
            <%= link_to category.name, products_path(category.permalink) %>
            </h4>
            <p>
              <%= category.description %>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
